extends ./componants/base.pug


block title 
    title Projects
block link
    style
        include ./../assets/css/newRegistrationForm.css
block nav 
    include ./componants/navbar.pug
    include ./componants/secondaryNavBar.pug
block content
    
    if (typeofreq) 
        .container 
      
            form.needs-validation.row.x(novalidate='' action="/bookshop/bookrequest/verifydata" method="POST")
                .col-md-4 
                
                    label.ght(for='validationCustom01') Book Name 
                    span.l *
                    input#validationCustom01.form-control.pname(type='text' placeholder='Book Title'  required='' name="bname" )
                    .valid-feedback
                        | Looks good!
                    .invalid-feedback
                        | Please Enter the PDF Name.
        
                

                .col-md-4
                    label.ght(for='validationCustom004') Author Name
                
                    input#validationCustom004.form-control.link(type='text' placeholder='ex : H.C Verma' name="aname" )
                    .invalid-feedback
                        | Please provide a Aurthor.
                
           
            

                   

                .row.x 
                    .col-md-8 
                        label(for='validationCustomc04') Book Language 
                        span.l *
                        input#validationCustomc04.form-select.language(placeholder='language' required='' name="language" type='text')
                        .invalid-feedback
                            | Please provide a valid Language.
            
                .row.x 
                    .col-md-8 
                        label(for='validationCustomc04') Book Type
                        span.l *
                        select#validationCustomc04.form-select.language(placeholder='language' required='' name="btype")
                            option(value="book") Book
                            option(value="PDF") PDF
                            option(value="any") Any
                        .invalid-feedback

                            | Please provide a valid Language.
                

                .row.x 
                    .col-md-8 
                        label(for='validationCustom03') Book Details
             
                        textarea#validationCustom03.form-control.pdis(placeholder='Other details if any'  name="pdis"  rows="3")
               
                
               
           
                .row.x
                
                    .col-12
                        .form-check
                            input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                            label.form-check-label(for='invalidCheck')
                                | Agree to terms and conditions
                            .invalid-feedback
                                | You must agree before submitting.
                        .col-12
                            button.btn.btn-outline-danger.p(type='submit') Submit form


          
            script
                include ./../assets/js/bookreq.js
    else
        .container
            form.needs-validation.row.x(novalidate='' action="/bookshop/projectrequest/verifydata" method="POST")
                .col-md-4 
                
                    label.ght(for='validationCustom01') Project Name
                    span.l *
                    input#validationCustom01.form-control.pname(type='text' placeholder='Book Title'  required='' name="pname" )
                    .valid-feedback
                        | Looks good!
                    .invalid-feedback
                        | Please Enter the PDF Name.
        
                

                   

                .row.x 
                    .col-md-8 
                        label(for='validationCustomc04') Elements 
                        span.l *
                        input#validationCustomc04.form-select.language(placeholder='ex : c,c++' required='' name="language" type='text')
                        .invalid-feedback
                            | Please provide a valid Language.
            
           

                .row.x 
                    .col-md-8 
                        label(for='validationCustom03') Project Details
             
                        textarea#validationCustom03.form-control.pdis(placeholder='Other details if any'  name="pdis"  rows="3")
               
                
               
           
                .row.x
                
                    .col-12
                        .form-check
                            input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                            label.form-check-label(for='invalidCheck')
                                | Agree to terms and conditions
                            .invalid-feedback
                                | You must agree before submitting.
                        .col-12
                            button.btn.btn-outline-danger.p(type='submit') Submit form


          
                script
                    include ./../assets/js/bookreq.js 

            



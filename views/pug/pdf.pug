extends ./componants/base.pug


block title 
    title Projects
block link
    style
        include ./../assets/css/newRegistrationForm.css
block nav 
    include ./componants/navbar.pug
    include ./componants/secondaryNavBar.pug
block content
    .container 
        if(err) 
            p.l.x #{msg}
        form.needs-validation.row.x(novalidate='' action="/bookshop/pdf/verifydata" method="POST" enctype="multipart/form-data")
            .col-md-4 
                
                label.ght(for='validationCustom01') PDF Title
                span.l *
                input#validationCustom01.form-control.pname(type='text' placeholder='Book Title'  required='' name="pname" )
                .valid-feedback
                    | Looks good!
                .invalid-feedback
                        | Please Enter the PDF Name.
        
                

                .col-md
                    label.ght(for='validationCustom004') Aurthor Name
                
                    input#validationCustom004.form-control.link(type='text' placeholder='ex : H.C Verma' name="aname" )
                    .invalid-feedback
                        | Please provide a Aurthor.
            
                .col-md 
                    label.ght(for='validationCustom05' title="project image") Upload PDF
                    span.l * 
                    input#validationCustom05.form-control.pimg(type='file' placeholder='Image' name="pdfimg" accept=".pdf")
                    .invalid-feedback
                        | Please provide a valid PDF.
                   

            .row.x 
                .col-md-8 
                    label(for='validationCustomc04') Book Language 
                    span.l *
                    select#validationCustomc04.form-select.language(placeholder='language' required='' name="language")
                    .invalid-feedback
                        | Please provide a valid Language.
                

            .row.x 
                .col-md-8 
                    label(for='validationCustom03') PDF Details
             
                    textarea#validationCustom03.form-control.pdis(placeholder='Other details if any'  name="pdis"  rows="3")
               
                
               
           
            .row.x
                
                .col-12
                    .form-check
                        input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                        label.form-check-label(for='invalidCheck')
                            | Agree to terms and conditions
                        .invalid-feedback
                            | You must agree before submitting.
                    .col-12
                        button.btn.btn-outline-danger.p(type='submit') Submit form

    .container 
        if(err)
            p.l #{msg}
            
block script 
    script 
        include ./../assets/js/pdf.js
  

extends ./componants/base.pug


block title 
    title Sell books
block link
    style
        include ./../assets/css/newRegistrationForm.css
block nav 
    include ./componants/navbar.pug
    include ./componants/secondaryNavBar.pug
block content
    .container 
        form.needs-validation.row.x(novalidate='' action="/bookshop/verifydata" method="POST" enctype="multipart/form-data")
            .col-md-4 
                
                label(for='validationCustom01') Book Name
                span.l *
                input#validationCustom01.form-control.bname(type='text' placeholder='Book Title'  required='' name="bname" )
                .valid-feedback
                    | Looks good!
                .invalid-feedback
                        | Please Enter the first Name.
            .col-md-4
                label(for='validationCustom02') Book Aurthor 
                input#validationCustom02.form-control(type='text' placeholder='Aurthor' name="bauth" )
                
            .col-md
                label(for='validationCustomUsername') Publish Year
                span.l *
                .input-group
                    .input-group-prepend
                        span#inputGroupPrepend.input-group-text @
                    input#validationCustomUsername.form-control(type='number' placeholder='year' name="pyear" aria-describedby='inputGroupPrepend' required='')
                    .invalid-feedback
                        | Please enter the email
            .row.x
                .col-md
                    label(for='validationCustomc04') Book Language 
                    span.l *
                    select#validationCustomc04.form-select.language(placeholder='language' required='' name="language")
                    .invalid-feedback
                        | Please provide a valid Language. 
                .col-md 
                    label(for='vali') category
                    span.l *
                    select#vali.form-select.category(placeholder='City' name="category")
                    .invalid-feedback
                        | Please provide a valid category.
              
                .col-md 
                    label(for='validationCustomc05') Price  (write 0 if free)
                    sapn.l *
                    input#validationCustomc05.form-control.price(type='number' placeholder='price' name="price")
                    .invalid-feedback
                        | Please provide a valid zip.

                .col-md
                    label(for='valii') Book Type
                    span.l *
                    select#valii.form-select.btype(name="btype")
                        option(value="0" selected disabled) Select Book Type 
                        option(value="n") New
                        option(value="o") Old
                        


            .row.x 
                .col-md 
                    label(for='vali') Class
                    span.l *
                    select#vali.form-select.class(placeholder='class' name="class")
                    .invalid-feedback
                        | Please provide a valid Class.
                .col-md
                    label(for='validationCustom004') Book for
                    input#validationCustom004.form-control.altphone(type='text' placeholder='ex : IIT,NEET,Engineering' name="bookfor" )
                    //- .invalid-feedback
                    //-     | Please provide a valid state.
                .col-md 
                    label(for='validationCustom05' title="Date of Birth") Book Image (max five)
                    input#validationCustom05.form-control.bookimg(type='file' placeholder='Image' name="bookimg" accept="image/*" multiple)
                    .invalid-feedback
                        | Please provide a valid images.
                   

            .row.x 
                .col-md-8 
                    label(for='validationCustom03') Other Details
             
                    textarea#validationCustom03.form-control.pass(type='password' placeholder='Other details if any'  name="dis"  rows="3")
               
                
               
           
            .row.x
                
                .col-12
                    .form-check
                        input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                        label.form-check-label(for='invalidCheck')
                            | Agree to terms and conditions
                        .invalid-feedback
                            | You must agree before submitting.
                    .col-12
                        button.btn.btn-outline-danger.p(type='submit') Submit form

    .container 
        if(err)
            p.l #{msg}
            
block script 
    script 
        include ./../assets/js/sell.js

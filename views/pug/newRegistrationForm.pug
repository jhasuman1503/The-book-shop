extends ./componants/base.pug 

block title 
    title Registration

block link
    style
        include ./../assets/css/newRegistrationForm.css
block nav 
    include ./componants/navbar.pug
    include ./componants/secondaryNavBar.pug

block content
    -var mobile = mobilenumber
 

    .container 
        p.lol
            span.l '*'
            | :-  required to fill
        if(err)
            p.l #{msg}
 
    .container 
        form.needs-validation.row.x(novalidate='' action="/newregistration/checking/redirecting" method="POST" enctype="multipart/form-data")
            .col-md-4 
                
                label(for='validationCustom01') First name
                span.l *
                input#validationCustom01.form-control.fname(type='text' placeholder='First name'  required='' name="fname" )
                .valid-feedback
                    | Looks good!
                .invalid-feedback
                        | Please Enter the first Name.
            .col-md-4
                label(for='validationCustom02') Last name
                input#validationCustom02.form-control(type='text' placeholder='Last name' name="lname" )
                
            .col-md
                label(for='validationCustomUsername') email
                span.l *
                .input-group
                    .input-group-prepend
                        span#inputGroupPrepend.input-group-text @
                    input#validationCustomUsername.form-control(type='email' placeholder='email' name="email" aria-describedby='inputGroupPrepend' required='')
                    .invalid-feedback
                        | Please enter the email
            .row.x
                .col-md
                    label(for='validationCustomc04') State
                    span.l *
                    select#validationCustomc04.form-select.statename(placeholder='State' required='' name="state")
                    .invalid-feedback
                        | Please provide a valid state. 
                .col-md 
                    label(for='vali') City
                    //- span.l *
                    select#vali.form-select.cityname(placeholder='City' name="city")
                    //- .invalid-feedback
                    //-     | Please provide a valid city.
              
                .col-md 
                    label(for='validationCustomc05') Zip
                    input#validationCustomc05.form-control.zip(type='number' placeholder='Zip' name="zip")
                    //- .invalid-feedback
                    //-     | Please provide a valid zip.

                .col-md
                    label(for='valii') Gender
                    span.l *
                    select#valii.form-select.gender(name="gender")
                        option(value="0" selected disabled) Select Gender 
                        option(value="m") Male
                        option(value="f") Female
                        option(value="t") Transgender 


            .row.x 
                .col-md 
                    label(for='validationCustom003') Mobile
                    input#validationCustom003.form-control(type='number' placeholder='mobile'  value=mobile disabled  name="mobile")
                    .invalid-feedback
                        | Please provide a valid mobile number.
                .col-md
                    label(for='validationCustom004') Alternate Mobile
                    input#validationCustom004.form-control.altphone(type='number' placeholder='mobile number' name="altmobile" )
                    //- .invalid-feedback
                    //-     | Please provide a valid state.
                .col-md 
                    label(for='validationCustom005' title="Date of Birth") D.O.B
                    input#validationCustom005.form-control(type='date' placeholder='Date of birth' name="dob" )
                    //- .invalid-feedback
                    //-     | Please provide a valid zip.

            .row.x 
                .col-md 
                    label(for='validationCustom03') Password
                    span.l *
                    input#validationCustom03.form-control.pass(type='password' placeholder='password' required='' name="pass")
                    .invalid-feedback
                        | Please provide a password..
                .col-md
                    label(for='validationCustom04') Confirm Password
                    span.l *
                    input#validationCustom04.form-control.cnfpass(type='password' placeholder='confirm password' required='' name="cnfpass")
                    .invalid-feedback
                        | Please provide a password.
                .col-md 
                    label(for='validationCustom05' title="Date of Birth") User Image
                    input#validationCustom05.form-control(type='file' placeholder='Image' name="userimg" accept="image/*")
                    //- .invalid-feedback
                    //-     | Please provide a valid zip.
            .row.x
                
                .col-12
                    .form-check
                        input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                        label.form-check-label(for='invalidCheck')
                            | Agree to terms and conditions
                        .invalid-feedback
                            | You must agree before submitting.
                    .col-12
                        button.btn.btn-outline-danger.p(type='submit') Submit form


    

block script 
    script 
        include ./../assets/js/newform.js
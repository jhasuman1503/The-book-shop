extends ./componants/base.pug


block title 
    title Projects
block link
    style
        include ./../assets/css/newRegistrationForm.css
block nav 
    include ./componants/navbar.pug
    include ./componants/secondaryNavBar.pug
block content
    .container 
        if(err) 
            p.l.x #{msg}
        form.needs-validation.row.x(novalidate='' action="/bookshop/projects/verifydata" method="POST" enctype="multipart/form-data")
            .col-md-4 
                
                label.ght(for='validationCustom01') Project Title
                span.l *
                input#validationCustom01.form-control.pname(type='text' placeholder='Book Title'  required='' name="pname" )
                .valid-feedback
                    | Looks good!
                .invalid-feedback
                        | Please Enter the Project Name.
        
                

                .col-md
                    label.ght(for='validationCustom004') Project Link
                    span.l *
                    input#validationCustom004.form-control.link(type='text' placeholder='ex : github,gitlab or etc..' name="link" )
                    .invalid-feedback
                        | Please provide a valid Link.
            
                .col-md 
                    label.ght(for='validationCustom05' title="project image") Project ScreenShot
                    input#validationCustom05.form-control.projectimg(type='file' placeholder='Image' name="projectimg" accept="image/*")
                    .invalid-feedback
                        | Please provide a valid images.
                   

            .row.x 
                .col-md-8 
                    label(for='validationCustom03') Elements Used
                    span.l *
             
                    textarea#validationCustom03.form-control.element(type='text' placeholder='html,css,js...etc'  name="element"  rows="3")
                    .invalid-feedback
                        | Please provide a valid data.
                

            .row.x 
                .col-md-8 
                    label(for='validationCustom03') Project Details
             
                    textarea#validationCustom03.form-control.pdis(placeholder='Other details if any'  name="pdis"  rows="3")
               
                
               
           
            .row.x
                
                .col-12
                    .form-check
                        input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                        label.form-check-label(for='invalidCheck')
                            | Agree to terms and conditions
                        .invalid-feedback
                            | You must agree before submitting.
                    .col-12
                        button.btn.btn-outline-danger.p(type='submit') Submit form


block script 
    script 
        include ./../assets/js/project.js
  
